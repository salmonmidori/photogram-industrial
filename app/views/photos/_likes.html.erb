<div>
  <div class="d-flex align-items-center">
    <%= pluralize(photo.likes_count, "like") %>

    <% like = current_user.likes.find_by(photo: photo) %>

  <% if like %>
    <%= link_to like, class: "btn btn-link link-underline-dark link-underline-opacity-0 link-underline-opacity-100-hover", method: :delete do %>
      <i class="fas fa-heart fa-fw"></i>
      Un-like
    <% end %>
  <% else %>
    <%= link_to likes_path,
                method: :post,
                data: { params: { "like[photo_id]" => photo.id, "like[fan_id]" => current_user.id } },
                class: "btn btn-link link-underline-dark link-underline-opacity-0 link-underline-opacity-100-hover" do %>
      <i class="far fa-heart fa-fw"></i>
      Like
    <% end %>
  <% end %>
</div>
  </div>
</div>
