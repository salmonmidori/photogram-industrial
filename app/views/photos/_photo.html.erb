<div class="row mb-4">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      
      <!-- Card header -->
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0"><%= photo.owner.username %></h5>
        <div>
          <%= link_to edit_photo_path(photo), class: "btn btn-outline-secondary" do %>
            <i class="fas fa-edit fa-fw"></i>
          <% end %>
          <%= link_to photo, data: { turbo_method: :delete }, class: "btn btn-outline-secondary" do %>
            <i class="fas fa-trash fa-fw"></i>
          <% end %>
        </div>
      </div>
      
      <!-- Photo Image -->
      <%= image_tag photo.image.url, class: "card-img-top" %>
      
      <!-- Card Body (Contains caption, likes, comments, and comment form) -->
      <div class="card-body">
        <div class="mb-3 d-flex justify-content-between">
  <div class="d-flex align-items-center">
    <%= pluralize(photo.likes_count, "like") %>

    <% like = current_user.likes.find_by(photo: photo) %>
    
    <% if like %>
      <%= link_to like, class: "btn btn-link link-underline-dark link-underline-opacity-0 link-underline-opacity-100-hover", method: :delete do %>
        <i class="fas fa-heart fa-fw"></i>

        Un-like   
         <% end %>
    <% else %>
    
    <%= form_with(model: Like.new, data: { turbo: :false }) do |form| %>
  <%= form.hidden_field "photo_id", value: photo.id %>
  
  <%= form.hidden_field "fan_id", value: current_user.id %>
    <%= form.button class: "btn btn-link link-underline-dark link-underline-opacity-0 link-underline-opacity-100-hover" do %>
      <i class="far fa-heart fa-fw"></i>
      Like
    <% end %>

    <% end %>
    <% end %>
          </div>
        </div>
        <p class="card-text"><%= photo.caption %></p>
        
        <!-- Comments -->
        <% photo.comments.each do |comment| %>
          <div class="d-flex align-items-start mb-2">
            <div class="flex-shrink-0">
              <%= image_tag comment.author.avatar_image_url, class: "rounded-circle me-2", width: "36px" %>
            </div>
            <div class="flex-grow-1">
              <h5 class="mt-0 mb-1"><%= comment.author.username %></h5>
              
        <div>
          <%= link_to edit_comment_path(comment), class: "btn btn-outline-secondary" do %>
            <i class="fas fa-edit fa-fw"></i>
          <% end %>
          <%= link_to comment, data: { turbo_method: :delete }, class: "btn btn-outline-secondary" do %>
            <i class="fas fa-trash fa-fw"></i>
          <% end %>
        </div>
              <p class="mb-0"><%= comment.body %></p>
            </div>
          </div>
        <% end %>
        
        <!-- Comment Form -->
        <%= render "comments/form", comment: photo.comments.build %>
      </div>
      
    </div>
  </div>
</div>
